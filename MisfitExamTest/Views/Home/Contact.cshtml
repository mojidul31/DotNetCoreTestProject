@{
    
    Layout = null;    
    ViewData["Title"] = "Contact";
}
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />

<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<div class="container">
    <br />
    <div style="width:90%; margin:0 auto;">
        <table id="example" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
            <thead>
                <tr>
                    @*<th>CreateDate</th>*@
                    <th>InfoId</th>
                    <th>FirstNo</th>
                    <th>SecondNo</th>
                    <th>SumOfTwo</th>
                    <th>UserName</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

<script>

    $(document).ready(function () {
        $("#example").DataTable({
            "processing": true, // for show progress bar
            "serverSide": true, // for process server side
            "filter": true, // this is for disable filter (search box)
            "orderMulti": false, // for disable multiple column at once
            "ajax": {
                "url": "/Home/GetAll",
                "type": "POST",
                "datatype": "json"
            },
            "columnDefs":
                [{
                    "targets": [0],
                    "visible": false,
                    "searchable": false
                }],
            "columns": [
                { "data": "InfoId", "name": "InfoId", "autoWidth": true },
                { "data": "FirstNo", "name": "FirstNo", "autoWidth": true },
                { "data": "SecondNo", "name": "SecondNo", "autoWidth": true },
                { "data": "SumOfTwo", "name": "SumOfTwo", "autoWidth": true },
                { "data": "UserName", "name": "UserName", "autoWidth": true },
                //{ "data": "Phoneno", "name": "Phoneno", "autoWidth": true },
            ]  
        });
    });

</script>
